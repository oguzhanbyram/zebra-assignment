{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts",
    "src/main.ts",
  ],
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "apps/**/*.ts",
    "libs/**/*.ts",
  ]
}
